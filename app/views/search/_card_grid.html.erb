<script language="javascript">
CardGrid = {

  init: function() {
    $("#resultCards .card").mouseover(CardGrid.onHoverOverCard);
    $("#resultCards .card").mouseout(CardGrid.onHoverOutCard);
  },

  onHoverOverCard: function(event) {
    $(event.target).css("z-index", "1000");
    $(event.target).animate({
      width: 280,
      top: -50,
      left: -50
    }, 100);
  },

  onHoverOutCard: function(event) {
    var card = $(event.target);
    card.animate({
      width: 155,
      top: 0,
      left: 0
    }, 100, function() { card.css("z-index", "0"); });
  }

}

$(document).ready(CardGrid.init);

</script>
<div id="resultCards">
  <% cards.each do |card| %>
    <div class="card" cardid="<%= card.id %>">
      <img src="https://s3-us-west-1.amazonaws.com/deckproxy.com/scans/<%= card.edition.downcase
            %>/<%= card.number %>.jpg" />
    </div>
  <% end %>
</div>
<input type="hidden" id="loadMore" value="<%= load_more ? offset : 'none' %>" />
